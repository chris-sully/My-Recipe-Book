

    <!-- Your Favorites -->
    <div class="container mt-5 p-3 rounded-top cstm-light-text card-border">
        <div class="row justify-content-center">
            <div class="col-12 mb-2">
                <h2>Your Favorites</h2>
            </div>
        </div>
    </div>

    <div class="container lg-card-body rounded-bottom p-5 mb-4">
        <div class="row justify-content-center">
            {{#each userRecipesHome}} <!-- query to get user's recipes & limit to 6 -->
                <!-- Dish -->
                <div class="col-sm-2 col-6 mb-4">
                    <div class="card position-relative">
                        <img src="{{this.image}}" alt="{{this.title}}" class="card-img-top">
                        <div class="position-absolute bottom-box">
                            recipe author
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>

