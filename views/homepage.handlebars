
    <!-- Favorites -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2>Your Favorites</h2>
            </div>
            {{#each favorites}}
                <div class="col-2 mb-4">
                    <img src="{{this.image}}" alt="{{this.dishName}}" class="img-fluid">
                    <p>{{this.dishName}}</p>
                </div>
            {{/each}}
        </div>
    </div>

    <!-- Suggestions -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <h2>You might like...</h2>
            </div>
            {{#each suggestions}}
                <div class="col-2 mb-4">
                    <img src="{{this.image}}" alt="{{this.dishName}}" class="img-fluid">
                    <p>{{this.dishName}}</p>
                </div>
            {{/each}}
        </div>
    </div>

