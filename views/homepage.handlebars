<!-- Your Favorites -->
<div class="container mt-5 p-3 rounded-top cstm-light-text card-border">
    <div class="row justify-content-center">
        <div class="col-12 mb-2">
            <h2>Your Favorites</h2>
        </div>
    </div>
</div>

<div class="container lg-card-body rounded-bottom p-5 mb-4">
    <div class="row justify-content-center">
        {{#each userRecipesHome}}
            <div class="col-sm-12 col-md-6 col-lg-2 mb-4">
                <a href="/recipes/{{this.id}}">
                    <div class="card position-relative">
                        <img src="{{this.image}}" alt="{{this.title}}" class="card-img-top custom-image">
                        {{!-- Commenting out because until we have a favorites system its redundant
                         <div class="position-absolute bottom-box">
                            {{user.username}}
                        </div> --}}
                        <div class="card-body cstm-card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>

