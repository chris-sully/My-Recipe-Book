<!-- Recipe Creation Form -->
        <div class="container mt-5 p-3 rounded-top cstm-light-text card-border">
            <div class="row justify-content-center">
                <div class="col-12 mb-2">
                    <h2>Create Recipe</h2>
                </div>
            </div>
        </div>

            <div class="container lg-card-body rounded-bottom p-5 mb-4">
                <div class="row justify-content-center">
                    <div class="col-8">
                        <!--multer.js requires that the form it interacts with to have enctype="multipart/form-data"-->
                        <form id="create-recipe" class="create-recipe" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="recipeName" class="form-label bold">Recipe Name:</label>
                                <input type="text" class="form-control" id="recipeName" name="recipeName" required>
                            </div>
                            <div class="mb-3">
                                <label for="ingredients" class="form-label bold">Ingredients:</label>
                                <textarea class="form-control" id="ingredients" rows="5" name="ingredients" required></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="instructions" class="form-label bold">Instructions:</label>
                                <textarea class="form-control" id="instructions" rows="5" name="instructions" required></textarea>
                            </div>
                            <!--file input type for the multer addition-->
                            <div class="mb-3">
                                <label for="recipe-image" class="form-label bold">Image URL:</label>
                                <input type="file" id="recipe-image" name="recipe-image" required/>
                            </div>
                            <!--<div class="mb-3">
                                <label for="imageUrl" class="form-label bold">Tag:s</label>
                                <input type="text" class="form-control" id="tags" required>
                            </div> -->
                            <button type="submit" class="btn cstm-btn">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        
    <script src="./js/createRecipe.js"></script>