<div class="container mt-5 p-3 rounded-top cstm-light-text card-border">
    <div class="row justify-content-center">
        <div class="col-12 mb-2">
            <h2>All Recipes</h2>
        </div>
    </div>
</div>
<div class="container lg-card-body rounded-bottom p-5 mb-4">
    <div class="row justify-content-center">

        <!-- Recipe Cards -->
        {{#each recipes}}
        <div class="col-sm-12 col-md-6 col-lg-2 mb-4">
            <a href="/recipes/{{this.id}}">
                <div class="card">
                    <img src="{{this.image}}" alt="{{this.title}}" class="card-img-top custom-image position-relative">
                    <div class="position-absolute bottom-box">
                        {{user.username}}
                    </div>
                    <div class="card-body cstm-card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                    </div>
                </div>
            </a>
        </div>
{{/each}}

    </div>
</div>