<div class="row">
    <div class="col-auto">
        <h2>Hello, {{name-signup}}!</h2>
    </div>
</div>

<div class="col-md-6 recipe-list">
    <h1>Your Recipies</h1>

    {{#each recipies as |recipe|}}
    <div class="row mb-2">
        <div class="col-md-6">
            <h3><a href= "/recipe/{{recipe.id}}">{{recipe.title}}</a></h3>
        </div>
    </div>
    {{/each}}
</div>